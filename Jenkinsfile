pipeline {
  agent any
  
  stages {
    
    stage ("build"){

      steps {
        echo 'building application'
      } // end step
      
    } // end stage

    stage ("test"){

      steps {
        echo 'testing application'
      } // end step
      
    } // end stage
    
    stage ("deploy"){

      steps {
        echo 'deploying application'
      } // end step
      
    } // end stage
    
  } // end stages
  
} // end pipeline
